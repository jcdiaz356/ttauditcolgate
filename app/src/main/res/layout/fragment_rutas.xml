<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:padding="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="No de PDVs"
                    android:id="@+id/tvPDVS"
                    android:textSize="@dimen/general" />

                <EditText
                    style="@style/TextLogin"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPDVS"
                    android:textSize="@dimen/general"

                    android:editable="false" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="No PDVs Auditados"
                    android:id="@+id/tvPDVSAuditados"
                    android:textSize="@dimen/general" />

                <EditText
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPDVSAuditados"
                    style="@style/TextLogin"

                    android:editable="false" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Avance"
                    android:id="@+id/textView"
                    android:textSize="@dimen/general"
                    />

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPorcentajeAvance"
                    style="@style/TextLogin"

                    android:editable="false" />
            </LinearLayout>

